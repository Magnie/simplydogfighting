<DogfightGame>:
    space: space
    hud: hud
    health: health
    starfield: starfield
    
    BoxLayout:
        size: (root.width, root.height)
        Starfield:
            size: (root.width, root.height)
            id: starfield
    
    FloatLayout:
        id: space
    
    FloatLayout:
        id: hud
        size: (root.width, root.height)
        Label:
            pos_hint: {'center_x': 0.5, 'y': 0.43}
            text: 'Health'
        
        ProgressBar:
            id: health
            pos_hint: {'center_x': 0.5, 'y': 0.4}
            size_hint: (0.33, 1)
            max: 100
            value: 75
        

<GenericObject>:
    source: root.source
    canvas.before:
        PushMatrix
        Rotate:
            angle: root.angle
            axis: 0, 0, 1
            origin: root.center
    canvas.after:
        PopMatrix
